generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WorkLog {
  id           Int      @id @default(autoincrement())
  date         DateTime
  driver       String
  customer     String
  truckType    String
  comments     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  billTo       String
  chargedHours Float?
  driverCharge Float?
  dropoff      String
  invoiced     Boolean?
  pickup       String
  registration String
  runsheet     Boolean?
}

model Customer {
  id        Int      @id @default(autoincrement())
  customer  String
  billTo    String
  contact   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  comments  String?
  fuelLevy  Int?
  tray      Int?
  crane     Int?
  semi      Int?
  semiCrane Int?
  tolls     Boolean  @default(false)
}
