generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WorkLog {
  id            Int      @id @default(autoincrement())
  date          DateTime
  driver        String
  customer      String
  billTo        String
  registration  String
  truckType     String
  pickup        String
  dropoff       String
  runsheet      Boolean?
  invoiced      Boolean?
  chargedHours  Float?
  driverCharge  Float?
  comments      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
